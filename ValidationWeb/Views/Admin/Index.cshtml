                    event.preventDefault();
                    var tblRow = $(this).closest('tr');

                    tblRow.find('.save-row').show();
                    tblRow.find('.cancel-row').show();
                    tblRow.find('.remove-row').show();

                    tblRow.find('.edit-row').hide();

                    // Make the whole row editable
